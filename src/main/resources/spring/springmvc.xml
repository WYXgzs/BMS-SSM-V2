<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
        http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <!-- 配置controller扫描包 -->
    <context:component-scan base-package="com.ryoeiken.bms.controller"/>

    <!-- 注解驱动 -->
    <mvc:annotation-driven/>

    <!-- Example: prefix="/WEB-INF/jsp/", suffix=".jsp", viewname="test" ->
        "/WEB-INF/jsp/test.jsp" -->
    <!-- 配置视图解析器 -->
    <bean
            class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <!-- 配置逻辑视图的前缀 -->
        <property name="prefix" value="/WEB-INF/jsp/"/>
        <!-- 配置逻辑视图的后缀 -->
        <property name="suffix" value=".jsp"/>
    </bean>

    <mvc:interceptors>
        <mvc:interceptor>
            <mvc:mapping path="/admin/**"/>
            <mvc:exclude-mapping path="/admin/toLogin.action"/>
            <mvc:exclude-mapping path="/admin/login.action"/>
            <mvc:exclude-mapping path="/admin/toRegister.action"/>
            <mvc:exclude-mapping path="/admin/register.action"/>
            <bean class="com.ryoeiken.bms.interceptor.AdminLoginInterceptor"/>
        </mvc:interceptor>

        <mvc:interceptor>
            <mvc:mapping path="/user/**"/>
            <mvc:exclude-mapping path="/user/toLogin.action"/>
            <mvc:exclude-mapping path="/user/login.action"/>
            <mvc:exclude-mapping path="/user/toRegister.action"/>
            <mvc:exclude-mapping path="/user/register.action"/>
            <bean class="com.ryoeiken.bms.interceptor.UserLoginInterceptor"/>
        </mvc:interceptor>
    </mvc:interceptors>

</beans>
